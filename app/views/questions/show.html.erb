<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user_id %>
  <%= button_tag class: 'follow_user' do %>
    <% button_to "Follow user", follow_user_path(id: @question.user_id, question_id: @question.id), method: :post %>
  <%end%>
</p>

<p>
  <strong>Topic:</strong>
  <%= @question.topic_id %>
  <%= button_tag class: 'follow_topic' do %>
    <% button_to 'Follow Topic', follow_topic_path(id: @question.topic_id, question_id: @question.id), method: :post %>
  <% end %>
</p>

<hr />
<h2>Answers</h2>
<br/>
<% @question.answers.each.with_index(1) do |answer, index| %>
  Answer: <%= index %><p class='answer'><%= answer.description %></p>
  <br/>
<% end %>
<hr />
<%= link_to 'New Answer', new_answer_path(question_id: @question.id) %> |
<%= link_to 'Back', questions_path %>
